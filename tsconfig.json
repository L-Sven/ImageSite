{
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "../../dist/",
    "noImplicitAny": true,
    "noLib": false,
    "noEmit": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "rootDir": "..",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["src", "tools/MockApi", "src/helpers/images.d.tsx"]
}
